{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "outputDirectory": "dist/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/auth/login",
      "dest": "/api/auth/login.js"
    },
    {
      "src": "/api/auth/logout",
      "dest": "/api/auth/logout.js"  
    },
    {
      "src": "/api/auth/me",
      "dest": "/api/auth/me.js"
    },
    {
      "src": "/api/blog-posts",
      "dest": "/api/blog-posts.js"
    },
    {
      "src": "/api/stats", 
      "dest": "/api/stats.js"
    },
    {
      "src": "/api/brewing-data",
      "dest": "/api/brewing-data.js"
    },
    {
      "src": "/api/generate-blog",
      "dest": "/api/generate-blog.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/$1"
    }
  ]
}